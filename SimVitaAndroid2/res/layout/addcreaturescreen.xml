<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top" >

    <ImageButton
        android:id="@+id/plant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/plantsmallzh" />

    <ImageButton
        android:id="@+id/eagle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="26dp"
        android:src="@drawable/eaglesmallbh" />

    <TextView
        android:id="@+id/eagleCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/eagle"
        android:layout_below="@+id/eagle"
        android:text="TextView" />

    <TextView
        android:id="@+id/plantCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/plant"
        android:layout_below="@+id/eagle"
        android:text="TextView" />

</RelativeLayout>
